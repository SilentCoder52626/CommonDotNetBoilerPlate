@model RoleEditViewModel
@{
    ViewData["Title"] = "Create Role";
}

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">

                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create Role!</h1>
                        </div>
                        <form method="post" asp-action="Edit">
                            <div class="form-group ">
                                @Html.HiddenFor(a=>a.Id)
                                @Html.TextBoxFor(a=>a.Name,new{@class="form-control form-control-user required",placeholder="Full Name"})
                                @Html.ValidationMessageFor(a=>a.Name,"",new{@class="text-danger"})
                            </div>

                            <button type="submit" class="btn btn-primary">
                                Update
                            </button>

                        </form>
                        <hr>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
