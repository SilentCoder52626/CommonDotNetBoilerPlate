@model ForgetPasswordModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Design by foolishdeveloper.com -->
    <title>Register - CommonMenu</title>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" asp-append-version="true">

    <!--Stylesheet-->
    <link href="~/css/forgetpassword.css" rel="stylesheet" />
</head>
<body>
    <div class="background">
        <div class="shape"></div>
        <div class="shape"></div>
    </div>
    <form method="post" asp-asp-area="Account" asp-asp-controller="Account" asp-action="ForgetPassword">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <h3>Common World</h3>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="text-center">
                    <p class="quote">Lost your keys to the digital kingdom? Fear not!<br /> Enter your email, and let's unlock a new password adventure together. 🚀🔐</p>
                    <input type="email" class="email-input" name="Email" placeholder="Your Email" required>
                    @Html.ValidationMessageFor(a=>a.Email,"",new {@class="text-danger"})
                    <button type="submit" class="reset-button">Reset Password</button>
                    <p class="mt-3">Found your keys? Great! <a asp-action="LogIn" asp-area="Account" asp-controller="Account" style="color:#7793FF;">Sign In</a> and continue your digital journey with confidence. 🔑🚀</p>
                </div>
            </div>

        </div>

    </form>
    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>
    @await Component.InvokeAsync("NToastNotify")
</body>


</html>
