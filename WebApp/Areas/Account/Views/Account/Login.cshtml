@model LoginViewModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Design by foolishdeveloper.com -->
    <title>Login - CommonWorld</title>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <!--Stylesheet-->
    <link href="~/css/login.css" rel="stylesheet" />

</head>
<body>
    <div class="background">
        <div class="shape"></div>
        <div class="shape"></div>
    </div>
    <form method="post" class="user" asp-area="Account" asp-controller="Account" asp-action="Login">
        <h3>Common World</h3>
        <label for="Email">Email</label>
        <input type="email" asp-for="Email" placeholder="Enter Email Address...">
        @Html.ValidationMessageFor(a => a.Email, "", new { @class = "text-danger" })


        <label for="password">Password</label>
        <input type="password" asp-for="Password" placeholder="Password">
        @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })

        <p style="float:right;padding:5px 0;"><a asp-action="ForgetPassword" asp-area="Account" asp-controller="Account">Forget Password?</a> </p>

        <button type="submit">Log In</button>
        <br />
        <br />
        <p>Don't have an account? <a asp-action="Register" asp-area="Account" asp-controller="Account">Register</a></p>



    </form>
    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>
    @await Component.InvokeAsync("NToastNotify")
</body>


</html>
